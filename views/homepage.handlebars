{{!-- homepage of all users posts --}}
<div class="row align-center mb-5">
    {{#each posts as |post|}}
    <div class="col-12">
        <header>{{post.title}}</header>
        <p>Posted By:{{post.user.name}} on {{post.dateCreated}}</p>
    </div>
    <div>
        <p>{{post.entry}}</p>
    </div>
    {{/each}}
</div>

